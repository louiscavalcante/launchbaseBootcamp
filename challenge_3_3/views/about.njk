{% extends 'layout.njk' %}

{% block head %}
    <title>About - Luiz Cavalcante</title>
{% endblock %}

{% block content %}

    <div id="wrapper">
        <img src="{{ items.avatar_url }}" alt="Image of {{ items.name }}" />
        <h1>{{ items.name }}</h1>
        <h2>{{ items.role }}</h2>
        <p>{{ items.description }}</p>
    </div>

    <div class="socials">
        {% for link in items.link %}
            <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
        {% endfor %}
    </div>

{% endblock %}
